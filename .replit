modules = ["nodejs-20", "web"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]

[[workflows.workflow]]
name = "kho-quanao-frontend"
mode = "sequential"
author = 42720599

# Bước 1: Khởi tạo Tailwind (nếu chưa có)
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tailwindcss init -p"

# Bước 2: Chạy App (QUAN TRỌNG: Thêm -- --host)
[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host"

[[ports]]
localPort = 4173
externalPort = 3001

[[ports]]
localPort = 5173
externalPort = 80

[[ports]]
localPort = 5174
externalPort = 3000
